<h1 class="display-4"><%= title %></h1>
<p><%= msg %></p>
<form action="/board/delete/<%= data.id %>" method="post">
  <p>
    削除するメッセージ：
    <span class="border border-danger p-1">
      <%= data.message %> (<%= data.user %>)
    </span>
  </p>
  <button type="submit" class="btn btn-secondary">送信</button>
</form>

<%- exposeLocalsToBrowser() %>
